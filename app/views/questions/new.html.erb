<h1>Новый вопрос</h1>


<%= form_with model: @question do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, required: true, minlength: 2, placeholder: "Title1" %> <!-- required - не пустой -->
  </div>  

  <div>
    <%= f.label :body %>  <!-- надпись перед формой -->
    <%= f.text_field :area, required: true, minlength: 2, placeholder: "Body1" %>
  </div>

  <%= f.submit "Submit question" %>
<% end %>